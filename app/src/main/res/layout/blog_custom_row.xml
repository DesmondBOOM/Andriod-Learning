<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/blog_tweet_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/avatar"
            android:background="@color/gray"
            android:contentDescription="@string/tweet_head_image" />

    <TextView
            android:id="@+id/blog_tweet_sender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/blog_tweet_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/blog_tweet_avatar"
            android:textSize="14sp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:layout_marginStart="20dp" />

    <TextView
            android:id="@+id/blog_tweet_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/blog_tweet_avatar"
            app:layout_constraintTop_toBottomOf="@id/blog_tweet_sender"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/blog_tweet_images_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/blog_tweet_content"
            app:layout_constraintTop_toBottomOf="@id/blog_tweet_content"
            android:layout_marginTop="10dp">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/blog_tweet_comments_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/blog_tweet_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/blog_tweet_images_recycler_view"
            android:layout_marginTop="10dp">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>