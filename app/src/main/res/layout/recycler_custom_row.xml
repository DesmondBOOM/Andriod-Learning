<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/tweet_head_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/gray"
            android:contentDescription="@string/tweet_head_image" />

    <TextView
            android:id="@+id/tweet_sender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tweet_head_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tweet_head_image"
            android:background="@color/gray"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:layout_marginStart="20dp" />

    <TextView
            android:id="@+id/tweet_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tweet_head_image"
            app:layout_constraintTop_toBottomOf="@id/tweet_sender"
            android:background="@color/gray"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>