<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <ImageView
            android:id="@+id/aware_icon"
            android:layout_width="148.9dp"
            android:layout_height="30.3dp"
            android:src="@drawable/fill_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="88dp"
            android:contentDescription="@string/aware_icon_desp" />

    <EditText
            android:id="@+id/username"
            android:layout_width="250dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/aware_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="77.7dp"
            android:textSize="12sp"
            android:textColor="@color/login_edit_text_color"
            android:paddingHorizontal="10dp"
            android:background="@drawable/login_edit_shape"
            android:hint="@string/username"
            android:autofillHints="@string/username"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/password"
            android:layout_width="250dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/login_edit_text_color"
            android:paddingHorizontal="10dp"
            android:background="@drawable/login_edit_shape"
            android:hint="@string/password"
            android:autofillHints="@string/password"
            android:inputType="textPassword" />
</androidx.constraintlayout.widget.ConstraintLayout>