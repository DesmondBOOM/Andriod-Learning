<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MyFragmentActivity">

    <View
            android:id="@+id/blue_background"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#007aff"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/btn_android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/fragment_button_shape"
            android:text="@string/android"
            android:textAllCaps="false"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@id/blue_background"
            app:layout_constraintEnd_toEndOf="@id/blue_background"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="@id/blue_background"
            android:layout_marginTop="40dp" />

    <Button
            android:id="@+id/btn_java"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/fragment_button_shape"
            android:text="@string/java"
            android:textAllCaps="false"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@id/blue_background"
            app:layout_constraintEnd_toEndOf="@id/blue_background"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_android"
            android:layout_marginTop="30dp" />

    <FrameLayout
            android:id="@+id/fragment_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/blue_background"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>