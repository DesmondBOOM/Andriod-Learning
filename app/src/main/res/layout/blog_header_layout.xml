<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="-125dp"
            android:scaleType="centerCrop"
            android:background="@color/gray_light"
            android:contentDescription="@string/user_profile_image" />

    <ImageView
            android:id="@+id/blog_user_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/avatar"
            android:scaleType="centerCrop"
            android:contentDescription="@string/tweet_head_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="25dp" />

    <TextView
            android:id="@+id/blog_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/username"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@id/blog_user_avatar"
            app:layout_constraintTop_toTopOf="@id/blog_user_avatar"
            app:layout_constraintBottom_toBottomOf="@id/blog_user_avatar"
            android:layout_marginBottom="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>